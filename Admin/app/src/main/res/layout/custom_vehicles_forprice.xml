<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/roundedcornerbackground">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="@drawable/nophoto"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/vehiclecompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:text="Aulto"
            android:layout_toRightOf="@+id/image"
            android:textColor="#ff000000" />

        <Button
            android:id="@+id/washtypes"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Wash Types"
            android:layout_below="@+id/image"
            android:background="@drawable/roundedcornerbutton"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/accessories"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/accessories"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Accessories"
            android:layout_margin="5dp"
            android:layout_below="@+id/image"
            android:layout_alignParentRight="true"
            android:background="@drawable/roundedcornerbutton"
            android:textColor="#fff"
            />
    </RelativeLayout>
</RelativeLayout>