<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:background="@drawable/titlebargradiant">

        <ImageView
            android:id="@+id/option"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/option" />


        <TextView
            android:id="@+id/drivername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:text="Driver Name"
            />




    </RelativeLayout>


        <ImageView
            android:id="@+id/driverpic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            />



        <TextView
            android:id="@+id/gooffline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/driverpic"
            android:textColor="#000"
            android:textSize="25dp"
            android:text="Go Offline"
            />

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/status"
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gooffline"
            android:layout_marginTop="5.0dip"
            android:layout_centerHorizontal="true"
            android:textSize="14.0sp"
            app:colorBorder="#ff00c4a6"
            app:colorOn="#ff00c4a6"
            app:colorOff="#e33830"
            app:on="false"
            app:textOff="Go Online"
            app:textOn="Go Offline" />


        <RelativeLayout
            android:id="@+id/addresslyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_below="@+id/status"
            android:background="#ccc"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="Hassanganakath house"
                />


        </RelativeLayout>

        <ImageView
            android:id="@+id/editaddress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_alignBottom="@+id/addresslyt"
            android:padding="5dp"
            />
        <RelativeLayout
            android:id="@+id/radiouslyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_above="@+id/footer"
            android:paddingBottom="15dp"
            >

            <TextView
                android:id="@+id/km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornerradious"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="Within 10 Km Radious"
                android:textColor="#fff"
                />

             <ImageView
                 android:id="@+id/editkm"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:src="@drawable/edit"
                 android:layout_toRightOf="@+id/km"
                 android:layout_margin="5dp"
                 android:padding="5dp"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            >

            <RelativeLayout
                android:id="@+id/lytpendingjobs"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                >

                <RelativeLayout
                    android:id="@+id/pendingjobs"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/roundedcorner_circle"
                    >

                    <TextView
                        android:id="@+id/pendingjobcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        />

            </RelativeLayout>


                <TextView
                    android:id="@+id/txtpendingjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDING JOBS"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/pendingjobs"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />




            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/lytupcomingjobs"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                >

                <RelativeLayout
                    android:id="@+id/upcomingjobs"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/roundedcorner_circle"
                    >

                    <TextView
                        android:id="@+id/upcomingjobcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        />



                </RelativeLayout>


                <TextView
                    android:id="@+id/txtupcomingjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING JOBS"
                    android:textColor="#000"
                    android:layout_below="@+id/upcomingjobs"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />




            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/navigationbar"
        android:layout_width="300.0dip"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titlebar"
        android:background="#ffe3e3e3"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#fff8f8f8"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/drawr_actvty" />


</androidx.drawerlayout.widget.DrawerLayout>